######################################################################
## Here specify the location of the IBAMR source and the location
## where IBAMR has been built.
IBAMR_SRC_DIR = /home/amneet/SOFTWARES/LIBRARIESIBAMR/BOYCEG--2203/IBAMR
IBAMR_BUILD_DIR = /home/amneet/SOFTWARES/LIBRARIESIBAMR/BOYCEG--2203/ibamr-objs-opt

######################################################################
## Include variables specific to the particular IBAMR build.
include $(IBAMR_BUILD_DIR)/config/make.inc

######################################################################
## Build the IB tester application.

## SOURCE FILES 



## OBJECT FILES
OBJS3D = main_fallingsphere.o ../RigidIBStaggeredHierarchyIntegrator.o IBRigidStructureKinematics.o \
ForceProjector.o CartGridBodyForce.o ../IBKinematics.o ../RigidityConstraint.o ../fortran/viscdefpower3d.o

## DIMENSIONALITY
PDIM = 3


#########################################################################
## Rules

default: check-opt main3D


main2D: $(IBAMR_LIB_2D) $(IBTK_LIB_2D) $(OBJS2D)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(OBJS2D) \
	$(IBAMR_LIB_2D) $(IBTK_LIB_2D) $(LIBS) -DNDIM=$(PDIM) -o $@


main3D: $(IBAMR_LIB_3D) $(IBTK_LIB_3D) $(OBJS3D)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(OBJS3D) \
	$(IBAMR_LIB_3D) $(IBTK_LIB_3D) $(LIBS) -DNDIM=$(PDIM) -o $@


check-opt:
	if test "$(OPT)" == "1" ; then				\
	  if test -f stamp-debug ; then $(MAKE) clean ; fi ;	\
	  touch stamp-opt ;					\
	else							\
	  if test -f stamp-opt ; then $(MAKE) clean ; fi ;	\
	  touch stamp-debug ;					\
	fi ;

clean:
	$(RM) main3D
	$(RM) stamp-{opt,debug}
	$(RM) *.o *.lo *.objs *.ii *.int.c
	$(RM) -r .libs
	$(RM) ../fortran/*.o
	$(RM) ../RigidityConstraint.o ../RigidIBStaggeredHierarchyIntegrator.o ../IBKinematics.o


depend:
	makedepend -s "# THE FOLLOWING IS AUTOMATICALLY GENERATED BY MAKEDEPEND" \
	-- -DNDIM=$(PDIM) $(CPPFLAGS) -- $(SOURCES_3D_ZF)

######################################################################
# THE FOLLOWING IS AUTOMATICALLY GENERATED BY MAKEDEPEND
