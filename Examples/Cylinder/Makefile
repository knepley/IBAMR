######################################################################
## Here specify the location of the IBAMR source and the location
## where IBAMR has been built.
IBAMR_SRC_DIR = /path/to/IBAMR
IBAMR_BUILD_DIR = /path/to/ibamr-objs-opt


######################################################################
## Include variables specific to the particular IBAMR build.
include $(IBAMR_BUILD_DIR)/config/make.inc

######################################################################
## Build the IB tester application.

## SOURCE FILES 



## OBJECT FILES
OBJS2D = main.o ../../ConstraintIBKinematics.o ../../ConstraintIBMethod.o \
RigidBodyKinematics.o 

## DIMENSIONALITY
PDIM = 2


#########################################################################
## Rules

default: check-opt main2D


main2D: $(IBAMR_LIB_2D) $(IBTK_LIB_2D) $(OBJS2D)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(OBJS2D) \
	$(IBAMR_LIB_2D) $(IBTK_LIB_2D) $(LIBS) -DNDIM=$(PDIM) -o $@


check-opt:
	if test "$(OPT)" == "1" ; then				\
	  if test -f stamp-debug ; then $(MAKE) clean ; fi ;	\
	  touch stamp-opt ;					\
	else							\
	  if test -f stamp-opt ; then $(MAKE) clean ; fi ;	\
	  touch stamp-debug ;					\
	fi ;

clean:
	$(RM) main2D 
	$(RM) stamp-{opt,debug}
	$(RM) *.o *.lo *.objs *.ii *.int.c
	$(RM) -r .libs
	$(RM) ../../*.o


depend:
	makedepend -s "# THE FOLLOWING IS AUTOMATICALLY GENERATED BY MAKEDEPEND" \
	-- -DNDIM=$(PDIM) $(CPPFLAGS) -- $(SOURCES_3D_ZF)

######################################################################
# THE FOLLOWING IS AUTOMATICALLY GENERATED BY MAKEDEPEND
